extends app.pug 
block titulo
    title Atualizar cliente

block conteudo
    h1.text-primary Atualizar Cliente
    form(action=`/clients/${client.id}?_method=PUT` method="POST")
        .mb-3   
            label.form-label(for='name') Nome 
            input#name.form-control(type='text' value=`${client.name}`  name='name' placeholder='Digite o nome')
        .mb-3   
            label.form-label(for='empresa') Empresa
            input#name.form-control(type='text' value=`${client.empresa}`  name='empresa' placeholder='Digite o nome da empresa')
        .mb-3   
            label.form-label(for='cargo') Digite o cargo
            input#name.form-control(type='text' value=`${client.cargo}`  name='cargo' placeholder='Digite o cargo')
        .mb-3
            label.form-label(for='email') E-mail 
            input#email.form-control(type='email' value=`${client.email}`  name='email' placeholder='Digite o email')
        .mb-3
            label.form-label(for='telefone') Telefone
            input#email.form-control(type='number' value=`${client.telefone}` name='telefone' placeholder='Digite seu telefone')
        .mb-3   
            label.form-label(for='linkedin') Linkedin  
            input#name.form-control(type='text' value=`${client.linkedin}`  name='linkedin' placeholder='Linkedin')  
        .mb-3   
            label.form-label(for='aniversario') Data Aniversário
            input#name.form-control(type='text' value=`${client.aniversario}`  name='aniversario' placeholder='Digite a data do aniversario')
        .mb-3   
            label.form-label(for='endereco') Cidade 
            input#name.form-control(type='text' value=`${client.endereco}`  name='endereco' placeholder='Digite o endereço')
        .mb-3   
            label.form-label(for='Importante') Importante 
            input#name.form-control(type='text' value=`${client.importante}`  name='importante' placeholder='Digite seu texto')
        button(type='submit' value='Submit').btn.btn-success Atualizar
